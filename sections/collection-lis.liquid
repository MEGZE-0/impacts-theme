{%- comment -%}
  Responsive Collection Carousel (Theme-agnostic)
  - Items always side-by-side (flex track)
  - Prev/Next arrows ONLY (no dots)
  - Arrows fixed (reset theme styles)
  - Swipe/drag via native scroll + buttons
  - Blocks: add/remove/reorder collections freely
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .cc-{{ section.id }} .heading { margin: 0 0 22px; }

  .cc-{{ section.id }} .carousel { position: relative; }

  /* TRACK: always side-by-side */
  .cc-{{ section.id }} .track {
    display: flex;
    gap: 32px;
    align-items: flex-start;
    overflow-x: auto;
    overflow-y: hidden;
    padding: 8px 4px;
    margin: 0;
    list-style: none;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  /* hide scrollbar */
  .cc-{{ section.id }} .track::-webkit-scrollbar { height: 0; }
  .cc-{{ section.id }} .track { scrollbar-width: none; }

  /* slide widths per breakpoint */
  .cc-{{ section.id }} .slide {
    flex: 0 0 calc((100% - (32px * 3)) / 4); /* 4 visible desktop */
    scroll-snap-align: start;
  }
  @media (max-width: 1023px) {
    .cc-{{ section.id }} .slide {
      flex: 0 0 calc((100% - (32px * 2)) / 3); /* 3 visible tablet */
    }
  }
  @media (max-width: 767px) {
    .cc-{{ section.id }} .slide {
      flex: 0 0 55.5%; /* ~1.8 visible mobile (peek) */
    }
  }

  /* card */
  .cc-{{ section.id }} .card {
    display: grid;
    justify-items: center;
    text-decoration: none;
    color: inherit;
  }

  /* circle size: responsive with clamp so 4 fit nicely */
  .cc-{{ section.id }} .circle {
    width: clamp(140px, 18vw, 220px);
    aspect-ratio: 1 / 1;
    border-radius: 999px;
    overflow: hidden;
    border: 2px solid #dadada;
    padding: 2px;
    background: #fff;
    box-shadow: 0 6px 18px rgba(0,0,0,.08);
    transition: transform .3s ease, box-shadow .3s ease, border .3s ease;
  }

  .cc-{{ section.id }} .circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 999px;
    display: block;
    transition: transform .3s ease;
  }

  .cc-{{ section.id }} .card:hover .circle img { transform: scale(1.06); }
  .cc-{{ section.id }} .card:hover .circle {
    border: 3px solid #000;
    box-shadow: 0 10px 26px rgba(0,0,0,.14);
  }

  .cc-{{ section.id }} .label {
    margin-top: 14px;
    font-size: 14px;
    text-align: center;
    color: #000;
  }
  @media (max-width: 767px) {
    .cc-{{ section.id }} .label { font-size: 13px; }
  }

  /* ARROWS WRAP */
  .cc-{{ section.id }} .arrows {
    position: absolute;
    top: 50%;
    left: 0; right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    pointer-events: none;
    z-index: 10;
  }

  /* FIX: reset theme styles so arrows don't look broken */
  .cc-{{ section.id }} .arrows .btn{
    all: unset;
    pointer-events: auto;
    width: 44px;
    height: 44px;
    border-radius: 999px;
    background: #fff;
    border: 1px solid rgba(0,0,0,.14);
    box-shadow: 0 6px 18px rgba(0,0,0,.12);
    display: grid;
    place-items: center;
    cursor: pointer;
  }

  .cc-{{ section.id }} .arrows .btn.prev { margin-left: -24px; }
  .cc-{{ section.id }} .arrows .btn.next { margin-right: -24px; }

  .cc-{{ section.id }} .arrows .btn:hover{
    box-shadow: 0 10px 26px rgba(0,0,0,.16);
  }
  .cc-{{ section.id }} .arrows .btn:focus{
    outline: 2px solid rgba(0,0,0,.25);
    outline-offset: 2px;
  }
  .cc-{{ section.id }} .arrows .btn[disabled]{
    opacity: .35;
    cursor: not-allowed;
  }

  .cc-{{ section.id }} .arrows .btn svg{
    width: 18px !important;
    height: 18px !important;
    display: block !important;
  }
  .cc-{{ section.id }} .arrows .btn svg path{
    stroke: #000 !important;
    stroke-width: 2.5 !important;
  }

  /* Optional: hide arrows on mobile (remove if you want them visible on mobile too) */
  @media (max-width: 767px) {
    .cc-{{ section.id }} .arrows { display: none; }
  }
</style>

<div class="cc-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <h2 class="heading {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
    {%- endunless -%}

    <div class="carousel" data-cc-carousel="{{ section.id }}">
      <ul class="track" id="Track-{{ section.id }}" role="list">
        {%- for block in section.blocks -%}
          {%- assign c = block.settings.collection -%}
          {%- if c != blank -%}
            {%- assign img = block.settings.custom_image | default: c.featured_image -%}
            {%- assign label = block.settings.custom_label | default: c.title -%}

            <li class="slide" {{ block.shopify_attributes }}>
              <a class="card" href="{{ c.url }}">
                <div class="circle">
                  {%- if img != blank -%}
                    <img
                      src="{{ img | image_url: width: 700 }}"
                      alt="{{ label | escape }}"
                      loading="lazy"
                      width="700"
                      height="700"
                    >
                  {%- else -%}
                    <img
                      src="{{ 'collection-apparel-1' | asset_url }}"
                      alt="{{ label | escape }}"
                      loading="lazy"
                      width="700"
                      height="700"
                    >
                  {%- endif -%}
                </div>
                <div class="label">{{ label }}</div>
              </a>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>

      <div class="arrows" aria-hidden="false">
        <button class="btn prev" type="button" aria-controls="Track-{{ section.id }}" aria-label="Previous">
          <svg viewBox="0 0 20 20" aria-hidden="true" focusable="false">
            <path d="M12.5 4.5 7 10l5.5 5.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>

        <button class="btn next" type="button" aria-controls="Track-{{ section.id }}" aria-label="Next">
          <svg viewBox="0 0 20 20" aria-hidden="true" focusable="false">
            <path d="M7.5 4.5 13 10l-5.5 5.5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    const root = document.querySelector('[data-cc-carousel="{{ section.id }}"]');
    if (!root) return;

    const track = root.querySelector('#Track-{{ section.id }}');
    const prev = root.querySelector('.btn.prev');
    const next = root.querySelector('.btn.next');

    function getGap() {
      const styles = getComputedStyle(track);
      const g = parseFloat(styles.gap || styles.columnGap || 0);
      return isNaN(g) ? 0 : g;
    }

    function getStep() {
      const first = track.querySelector('.slide');
      if (!first) return 0;
      return first.getBoundingClientRect().width + getGap();
    }

    function updateButtons() {
      const maxScroll = track.scrollWidth - track.clientWidth;
      prev.disabled = track.scrollLeft <= 1;
      next.disabled = track.scrollLeft >= (maxScroll - 1);
    }

    function scrollByOne(dir) {
      const step = getStep();
      if (!step) return;
      track.scrollBy({ left: dir * step, behavior: 'smooth' });
    }

    prev.addEventListener('click', () => scrollByOne(-1));
    next.addEventListener('click', () => scrollByOne(1));

    track.addEventListener('scroll', updateButtons, { passive: true });
    window.addEventListener('resize', updateButtons);

    updateButtons();
  })();
</script>

{% schema %}
{
  "name": "Collection slider",
  "tag": "section",
  "class": "section",
  "max_blocks": 30,
  "disabled_on": { "groups": ["header", "footer"] },
  "settings": [
    { "type": "inline_richtext", "id": "title", "default": "Collections", "label": "Heading" },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" },
        { "value": "hxl", "label": "Extra large" },
        { "value": "hxxl", "label": "Extra extra large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "header", "content": "Section padding" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 36 }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "Collection",
      "settings": [
        { "type": "collection", "id": "collection", "label": "Collection" },
        { "type": "image_picker", "id": "custom_image", "label": "Custom image (optional)" },
        { "type": "text", "id": "custom_label", "label": "Custom label (optional)" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection slider",
      "blocks": [
        { "type": "featured_collection" },
        { "type": "featured_collection" },
        { "type": "featured_collection" },
        { "type": "featured_collection" }
      ]
    }
  ]
}
{% endschema %}