{% doc %}
  @prompt
    make collection shep circle  
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-circle-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding }}px;
  }

  .ai-collection-circle__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
    text-align: center;
  }

  .ai-collection-circle__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.circle_size }}px;
    height: {{ block.settings.circle_size }}px;
    border-radius: 50%;
    overflow: hidden;
    background-color: {{ block.settings.placeholder_color }};
    transition: transform 0.3s ease;
  }

  .ai-collection-circle__image-wrapper-{{ ai_gen_id }}:hover {
    transform: scale({{ block.settings.hover_scale }});
  }

  .ai-collection-circle__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-circle__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_color }};
  }

  .ai-collection-circle__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-circle__link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
  }

  .ai-collection-circle__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0;
    transition: color 0.3s ease;
  }

  .ai-collection-circle__link-{{ ai_gen_id }}:hover .ai-collection-circle__title-{{ ai_gen_id }} {
    color: {{ block.settings.title_hover_color }};
  }

  .ai-collection-circle__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    max-width: {{ block.settings.description_max_width }}px;
  }

  .ai-collection-circle__count-{{ ai_gen_id }} {
    font-size: {{ block.settings.count_size }}px;
    color: {{ block.settings.count_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-collection-circle__image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.circle_size | times: 0.7 }}px;
      height: {{ block.settings.circle_size | times: 0.7 }}px;
    }

    .ai-collection-circle__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-collection-circle__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-circle-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-circle__container-{{ ai_gen_id }}">
    {% if block.settings.collection != blank %}
      <a href="{{ block.settings.collection.url }}" class="ai-collection-circle__link-{{ ai_gen_id }}">
        <div class="ai-collection-circle__image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.collection.image %}
            <img
              src="{{ block.settings.collection.image | image_url: width: 600 }}"
              alt="{{ block.settings.collection.image.alt | escape }}"
              class="ai-collection-circle__image-{{ ai_gen_id }}"
              loading="lazy"
              width="600"
              height="600"
            >
          {% elsif block.settings.collection.products.first.featured_image %}
            <img
              src="{{ block.settings.collection.products.first.featured_image | image_url: width: 600 }}"
              alt="{{ block.settings.collection.products.first.featured_image.alt | escape }}"
              class="ai-collection-circle__image-{{ ai_gen_id }}"
              loading="lazy"
              width="600"
              height="600"
            >
          {% else %}
            <div class="ai-collection-circle__placeholder-{{ ai_gen_id }}">
              {{ 'collection-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        {% if block.settings.show_title %}
          <h3 class="ai-collection-circle__title-{{ ai_gen_id }}">
            {{ block.settings.collection.title }}
          </h3>
        {% endif %}

        {% if block.settings.show_description and block.settings.collection.description != blank %}
          <p class="ai-collection-circle__description-{{ ai_gen_id }}">
            {{ block.settings.collection.description | strip_html | truncate: 100 }}
          </p>
        {% endif %}

        {% if block.settings.show_product_count %}
          <span class="ai-collection-circle__count-{{ ai_gen_id }}">
            {{ block.settings.collection.products_count }}
            {% if block.settings.collection.products_count == 1 %}
              product
            {% else %}
              products
            {% endif %}
          </span>
        {% endif %}
      </a>
    {% else %}
      <div class="ai-collection-circle__link-{{ ai_gen_id }}">
        <div class="ai-collection-circle__image-wrapper-{{ ai_gen_id }}">
          <div class="ai-collection-circle__placeholder-{{ ai_gen_id }}">
            {{ 'collection-1' | placeholder_svg_tag }}
          </div>
        </div>

        {% if block.settings.show_title %}
          <h3 class="ai-collection-circle__title-{{ ai_gen_id }}">
            Collection name
          </h3>
        {% endif %}

        {% if block.settings.show_description %}
          <p class="ai-collection-circle__description-{{ ai_gen_id }}">
            Select a collection to display
          </p>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

