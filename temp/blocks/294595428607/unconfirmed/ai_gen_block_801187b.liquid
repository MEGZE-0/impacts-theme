{% doc %}
  @prompt
    make collection shep circle  , Create a responsive homepage section called "Shop by Category".
    
    Layout:
    - 4 circular category images in one horizontal row on desktop
    - Each image should have equal size
    - Text label centered below each circle
    - Clean spacing between items
    - Center the whole section
    
    Categories:
    1. Desks
    2. Chairs
    3. Storage Units
    4. Office Accessories
    
    Design style:
    - Minimal
    - Warm neutral background (#D9CFBF or very light beige)
    - Soft shadow around circles
    - Smooth hover effect:
       - Slight zoom-in on image
       - Subtle shadow increase
       - Cursor pointer
    
    Responsive behavior:
    - On tablet: 2 items per row
    - On mobile: horizontal scroll slider with snap effect
    
    Technical requirements:
    - Use a Shopify section (.liquid)
    - Make images clickable and linkable to collections
    - Allow admin to change image and label from theme editor
    - Make circle shape using border-radius: 50%
    - Maintain perfect aspect ratio (1:1)
    
    Spacing:
    - Top & bottom padding: 60px desktop / 40px mobile
    - Gap between items: 40px
    
    Hover transition:
    - transition: all 0.3s ease;
    - transform: scale(1.05);
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shop-category-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_desktop }}px 20px;
  }

  .ai-shop-category__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-shop-category__heading-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-shop-category__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.gap_desktop }}px;
    justify-items: center;
  }

  .ai-shop-category__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    width: 100%;
    max-width: {{ block.settings.circle_size }}px;
  }

  .ai-shop-category__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    border-radius: 50%;
    overflow: hidden;
    background-color: {{ block.settings.placeholder_color }};
    box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-shop-category__item-{{ ai_gen_id }}:hover .ai-shop-category__image-wrapper-{{ ai_gen_id }} {
    transform: scale({{ block.settings.hover_scale }});
    box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y | plus: 4 }}px {{ block.settings.shadow_blur | plus: 10 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | plus: 0.1 }});
  }

  .ai-shop-category__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-shop-category__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_color }};
  }

  .ai-shop-category__placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-shop-category__label-{{ ai_gen_id }} {
    margin-top: {{ block.settings.label_spacing }}px;
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    text-align: center;
    font-weight: {{ block.settings.label_weight }};
    transition: color 0.3s ease;
  }

  .ai-shop-category__item-{{ ai_gen_id }}:hover .ai-shop-category__label-{{ ai_gen_id }} {
    color: {{ block.settings.label_hover_color }};
  }

  @media screen and (max-width: 989px) and (min-width: 750px) {
    .ai-shop-category__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ block.settings.gap_tablet }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-shop-category-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_mobile }}px 0;
    }

    .ai-shop-category__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      padding: 0 20px;
    }

    .ai-shop-category__grid-{{ ai_gen_id }} {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: {{ block.settings.gap_mobile }}px;
      padding: 0 20px;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .ai-shop-category__grid-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-shop-category__item-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.mobile_item_width }}%;
      scroll-snap-align: start;
      max-width: 200px;
    }

    .ai-shop-category__label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size | times: 0.9 }}px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-shop-category__image-wrapper-{{ ai_gen_id }},
    .ai-shop-category__label-{{ ai_gen_id }} {
      transition: none;
    }

    .ai-shop-category__item-{{ ai_gen_id }}:hover .ai-shop-category__image-wrapper-{{ ai_gen_id }} {
      transform: none;
    }
  }
{% endstyle %}

<div class="ai-shop-category-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-shop-category__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-shop-category__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    <div class="ai-shop-category__grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign image_key = 'category_' | append: i | append: '_image'
          assign label_key = 'category_' | append: i | append: '_label'
          assign link_key = 'category_' | append: i | append: '_link'
          
          assign category_image = block.settings[image_key]
          assign category_label = block.settings[label_key]
          assign category_link = block.settings[link_key]
        %}

        <a 
          href="{% if category_link != blank %}{{ category_link }}{% else %}#{% endif %}" 
          class="ai-shop-category__item-{{ ai_gen_id }}"
        >
          <div class="ai-shop-category__image-wrapper-{{ ai_gen_id }}">
            {% if category_image %}
              <img
                src="{{ category_image | image_url: width: 600 }}"
                alt="{{ category_image.alt | escape }}"
                class="ai-shop-category__image-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="600"
              >
            {% else %}
              <div class="ai-shop-category__placeholder-{{ ai_gen_id }}">
                {{ 'collection-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          {% if category_label != blank %}
            <span class="ai-shop-category__label-{{ ai_gen_id }}">
              {{ category_label }}
            </span>
          {% endif %}
        </a>
      {% endfor %}
    </div>
  </div>
</div>

